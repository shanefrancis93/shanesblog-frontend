{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "./"
  },
  "include": ["*.ts", "mermaid.d.ts"],
  "exclude": ["node_modules"]
}
